{
  "name": "interweave",
  "version": "6.0.0-beta",
  "description": "React library to safely render HTML, filter attributes, autowrap text with matchers, render emoji characters, and much more.",
  "keywords": [
    "interweave",
    "inject",
    "interpolate",
    "react",
    "string",
    "component",
    "element",
    "matcher",
    "filter",
    "clean",
    "email",
    "url",
    "autolink",
    "emoji",
    "hashtag",
    "html",
    "markup",
    "safe",
    "render",
    "html"
  ],
  "main": "./lib/index.js",
  "scripts": {
    "babel": "build-lib ./src -d ./lib",
    "coverage": "run-coverage",
    "eslint": "run-linter ./src ./tests",
    "flow": "type-check",
    "jest": "run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "preversion": "yarn test && yarn run babel",
    "test": "yarn run jest",
    "test:live": "NODE_ENV=production bundle-lib -f iife -i ./tests/bundle.js -o ./tests/bundle.min.js && serve ./tests/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/interweave.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/interweave/issues"
  },
  "homepage": "https://github.com/milesj/interweave#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "emojibase-regex": "^1.0.3",
    "prop-types": "^15.5.10"
  },
  "peerDependencies": {
    "emojibase": "^1.2.2",
    "react": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.20.0",
    "emojibase": "^1.2.2",
    "emojibase-test-utils": "^1.0.4",
    "serve": "^6.0.6"
  },
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.json5"
  },
  "jest": {
    "preset": "@milesj/build-tool-config"
  }
}
