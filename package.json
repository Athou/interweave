{
  "name": "interweave-root",
  "private": true,
  "scripts": {
    "build": "beemo run-script build --workspaces=*",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:bundle": "yarn run build && beemo create-config typescript && webpack && serve ./tests/",
    "prettier": "beemo prettier",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish",
    "type": "beemo typescript --workspaces=* --noEmit"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.41.1",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "babel-loader": "^8.0.5",
    "core-js": "^3.0.1",
    "emojibase": "^2.2.0",
    "emojibase-test-utils": "^3.2.0",
    "lerna": "^3.13.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "serve": "^11.0.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "react": true
    },
    "eslint": {
      "rules": {
        "import/no-named-as-default": "off",
        "require-unicode-regexp": "off",
        "react/jsx-no-literals": "off",
        "react/no-unused-prop-types": "off",
        "react/default-props-match-prop-types": "off",
        "@typescript-eslint/camelcase": "off"
      }
    }
  },
  "browserslist": [
    "ie 11"
  ]
}
