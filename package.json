{
  "name": "interweave",
  "version": "0.0.1",
  "description": "Interweave components and elements into interpolated React strings.",
  "keywords": [
    "interweave",
    "inject",
    "interpolate",
    "react",
    "string",
    "component",
    "element",
    "matcher",
    "filter",
    "email",
    "url",
    "emoji",
    "hashtag"
  ],
  "files": [
    "*.md",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run build:js && npm run build:emoji",
    "build:js": "babel ./src -d ./lib",
    "build:emoji": "cp ./src/data/emoji.json ./lib/data",
    "watch": "babel --watch ./src -d ./lib",
    "emoji": "./bin/build-emoji.js > ./src/data/emoji.json",
    "lint": "eslint ./src ./tests",
    "flow": "flow check",
    "mocha": "npm run mocha:in ./tests/*.test.js ./tests/**/*.test.js",
    "mocha:in": "mocha --opts ./mocha.opts",
    "pretest": "npm run lint && npm run clean && npm run build",
    "test": "npm run mocha",
    "posttest": "npm run flow",
    "preversion": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/interweave.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/interweave/issues"
  },
  "homepage": "https://github.com/milesj/interweave#readme",
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-flow-comments": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.16.0",
    "babel-register": "^6.16.0",
    "chai": "^3.5.0",
    "emoji-regex": "^6.0.0",
    "emojione": "^2.2.6",
    "enzyme": "^2.4.1",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "flow-bin": "^0.32.0",
    "jsdom": "^9.5.0",
    "mocha": "^3.1.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "rimraf": "^2.5.4"
  }
}
