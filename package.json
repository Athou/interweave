{
  "name": "interweave-root",
  "private": true,
  "scripts": {
    "build": "beemo typescript --workspaces=*",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:live": "yarn run jest && webpack && serve ./tests/",
    "prettier": "beemo prettier",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish",
    "type": "beemo typescript --workspaces=* --noEmit"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.4.2",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "babel-loader": "^8.0.4",
    "emojibase": "^2.1.0",
    "emojibase-test-utils": "^3.1.0",
    "lerna": "^3.4.3",
    "react": "^16.5.2",
    "serve": "^10.0.2",
    "ts-loader": "^5.2.2",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "react": true
    },
    "eslint": {
      "rules": {
        "import/no-named-as-default": "off",
        "react/jsx-no-literals": "off"
      }
    }
  },
  "browserslist": [
    "ie 10"
  ]
}
