{
  "name": "interweave-root",
  "private": true,
  "scripts": {
    "build": "beemo typescript --workspaces=* --priority --react",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest --react",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "DEBUG=* yarn run jest",
    "test:live": "yarn run jest && webpack && serve ./tests/",
    "prettier": "beemo prettier",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish",
    "type": "beemo typescript --workspaces=* --noEmit --react"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.111.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "babel-loader": "^7.1.5",
    "emojibase": "^2.0.0",
    "emojibase-test-utils": "^3.0.0",
    "lerna": "^2.11.0",
    "react": "^16.4.1",
    "serve": "^9.2.0",
    "ts-loader": "^4.4.2",
    "typescript": "2.9.2",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "eslint": {
      "rules": {
        "import/no-named-as-default": "off",
        "react/jsx-no-literals": "off"
      }
    }
  },
  "browserslist": [
    "ie 10"
  ]
}
