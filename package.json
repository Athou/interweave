{
  "name": "interweave",
  "version": "3.0.2",
  "description": "React library to safely render HTML, filter attributes, autowrap text with matchers, render emoji characters, and much more.",
  "keywords": [
    "interweave",
    "inject",
    "interpolate",
    "react",
    "string",
    "component",
    "element",
    "matcher",
    "filter",
    "clean",
    "email",
    "url",
    "autolink",
    "emoji",
    "hashtag",
    "html",
    "markup",
    "safe",
    "render",
    "html"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "yarn run build:js && yarn run build:flow && yarn run build:emoji",
    "build:js": "babel ./src -d ./lib",
    "build:docs": "cp ./{*.md,package.json,LICENSE} ./lib",
    "build:flow": "cp ./flow/interweave.js.flow ./lib",
    "build:emoji": "cp ./src/data/emoji/data.json ./lib/data/emoji",
    "emoji": "./bin/build-emoji.js > ./src/data/emoji/data.json",
    "emoji:regex": "./bin/generate-emoji-regex.js",
    "lint": "eslint ./src ./tests",
    "flow": "flow check",
    "jest": "jest --config ./jest.json",
    "coverage": "yarn run jest -- --coverage",
    "pretest": "yarn run lint",
    "test": "yarn run jest",
    "test:bundle": "browserify -t [ babelify ] ./tests/bundle.js -o ./tests/bundle.min.js",
    "posttest": "yarn run flow",
    "preversion": "yarn test && yarn run clean && yarn run build",
    "postversion": "yarn run build:docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/interweave.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/interweave/issues"
  },
  "homepage": "https://github.com/milesj/interweave#readme",
  "dependencies": {
    "babel-runtime": "^6.23.0"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "emojione": "^2.2.6",
    "enzyme": "^2.8.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.42.0",
    "jest": "^19.0.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "regenerate": "^1.3.2",
    "rimraf": "^2.6.1"
  }
}
