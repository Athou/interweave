{
  "name": "interweave",
  "version": "4.1.0",
  "description": "React library to safely render HTML, filter attributes, autowrap text with matchers, render emoji characters, and much more.",
  "keywords": [
    "interweave",
    "inject",
    "interpolate",
    "react",
    "string",
    "component",
    "element",
    "matcher",
    "filter",
    "clean",
    "email",
    "url",
    "autolink",
    "emoji",
    "hashtag",
    "html",
    "markup",
    "safe",
    "render",
    "html"
  ],
  "scripts": {
    "babel": "build-lib ./src -d ./lib",
    "build": "yarn run babel && cp ./{*.md,package.json,LICENSE} ./lib && cp ./flow/interweave.js.flow ./lib",
    "coverage": "yarn run jest -- --coverage",
    "eslint": "run-linter ./src ./tests",
    "flow": "type-checl",
    "jest": "run-tests",
    "pretest": "yarn run eslint",
    "preversion": "yarn test && yarn run build",
    "posttest": "yarn run flow",
    "test": "yarn run jest",
    "test:bundle": "browserify -t [ babelify ] ./tests/bundle.js -o ./tests/bundle.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/interweave.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/interweave/issues"
  },
  "homepage": "https://github.com/milesj/interweave#readme",
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "emoji-database": "^0.1.0",
    "prop-types": "^15.5.8"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.1.2",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "enzyme": "^2.8.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4"
  }
}
