{
  "name": "interweave-root",
  "private": true,
  "scripts": {
    "build": "beemo typescript --workspaces=* --priority=core,emoji --react",
    "clean": "rimraf ./packages/*/{lib,esm}/ && lerna clean --yes",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug --log=debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "jest": "beemo jest --react",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:live": "yarn run build && bundle-lib ./tests/bundle.js ./tests/bundle.min.js && serve ./tests/",
    "updated": "lerna updated",
    "package": "yarn run clean && yarn install && yarn test && yarn run build",
    "prettier": "beemo prettier",
    "prerelease": "yarn run package",
    "release": "lerna publish",
    "release:force": "npm run release -- --force-publish=*",
    "type": "beemo typescript --workspaces --noEmit --react"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.100.1",
    "emojibase": "^1.7.1",
    "emojibase-test-utils": "^2.3.1",
    "lerna": "^2.11.0",
    "serve": "^8.1.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "dependencies": [
          "typescript"
        ]
      },
      "prettier",
      "typescript"
    ],
    "eslint": {
      "rules": {
        "import/no-named-as-default": "off"
      }
    }
  },
  "browserslist": [
    "ie 10"
  ]
}
