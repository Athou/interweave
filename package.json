{
  "name": "interweave",
  "version": "6.1.0",
  "description": "React library to safely render HTML, filter attributes, autowrap text with matchers, render emoji characters, and much more.",
  "keywords": [
    "interweave",
    "inject",
    "interpolate",
    "react",
    "string",
    "component",
    "element",
    "matcher",
    "filter",
    "clean",
    "email",
    "url",
    "autolink",
    "emoji",
    "hashtag",
    "html",
    "markup",
    "safe",
    "render",
    "html"
  ],
  "main": "./lib/index.js",
  "scripts": {
    "assemble": "yarn run clean && yarn run build && yarn test",
    "bootstrap": "lerna bootstrap",
    "bootstrap:slow": "lerna bootstrap --concurrency=1",
    "build": "lerna run build",
    "clean": "rimraf ./packages/{*}/lib/ && lerna clean --yes",
    "coverage": "run-coverage",
    "eslint": "run-linter ./src ./tests ./packages/*/{src,tests}",
    "flow": "type-check",
    "jest": "run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "outdated": "yarn outdated; for dir in `find ./packages/ -type d -maxdepth 1`; do (cd \"$dir\" && yarn outdated); done;",
    "publish": "lerna publish",
    "publish:force": "lerna publish --force-publish=*",
    "test": "yarn run jest",
    "test:live": "NODE_ENV=production bundle-lib -f iife -i ./tests/bundle.js -o ./tests/bundle.min.js && serve ./tests/",
    "updated": "lerna updated"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/interweave.git"
  },
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/interweave/issues"
  },
  "homepage": "https://github.com/milesj/interweave#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "emojibase-regex": "^1.0.4",
    "prop-types": "^15.5.10"
  },
  "peerDependencies": {
    "emojibase": "^1.3.0",
    "react": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.21.2",
    "emojibase": "^1.3.0",
    "emojibase-test-utils": "^1.0.5",
    "lerna": "^2.1.0",
    "serve": "^6.0.6"
  },
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.json5"
  },
  "eslintIgnore": [
    "lib/",
    "*.min.js",
    "*.map"
  ],
  "jest": {
    "preset": "@milesj/build-tool-config",
    "roots": [
      "./packages",
      "./tests"
    ],
    "testRegex": "./packages/([-a-z]+)?/tests/.*\\.test\\.js$"
  }
}
